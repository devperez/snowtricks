{% extends 'base.html.twig' %}

{% block body %}

{% for label, messages in app.flashes %}
	{% for message in messages %}
		<div class="alert alert-{{ label }} alert-dismissible" role="alert">
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			<div class="alert-message">
				{{ message|raw }}
			</div>
		</div>
	{% endfor %}
{% endfor %}

	<body id="page-top">
		<!-- Trick Grid-->
		<section class="page-section bg-light" id="tricks">
			<div class="container">
				<div class="text-center">
					<h2 class="section-heading text-uppercase">Tricks</h2>
					<h3 class="section-subheading text-muted">Cliquez sur une photo pour avoir plus de détails.</h3>
				</div>
				<div class="row">
					{% for trick in tricks %}
						<div class="col-lg-4 col-sm-6 mb-4">
							<div class="trick-item">
								<a class="trick-link" href="{{ path('show',{'id':trick.id}) }}">
									<div class="trick-hover">
										<div class="trick-hover-content">
											{# <i class="fas fa-plus fa-3x"></i> #}
											{% for media in trick.media %}
												{% if loop.first and media.type == 'photo' %}
													<img class="grid-media" src="{{ asset(media.getMedia()) }}" alt="">
												{% endif %}
											{% endfor %}
										</div>
									</div>
								</a>
								<div class="trick-caption">
									<div class="trick-caption-heading">{{ trick.name }}
										{% if app.user %}
											<i class="fa-solid fa-pencil pencil" style="cursor:pointer" title="Modifier cet article"></i>
										{% endif %}
									</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</section>
			{% if app.user %}
			<div class="container text-center">
				<a class="btn btn-primary btn-xl text-uppercase" href="{{ path('newTrick') }}">Créer un nouveau trick !</a>
			</div>
			{% endif %}
	</body>
	
{% endblock %}
