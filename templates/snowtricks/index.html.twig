{% extends 'base.html.twig' %}

{% block body %}
	<body
		id="page-top">
		<!-- Navigation-->
		<nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
			<div class="container">
				<a class="navbar-brand" href="#page-top"><img src="/assets/img/logo.png" alt="..."/></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
					Menu
					<i class="fas fa-bars ms-1"></i>
				</button>
				<div class="collapse navbar-collapse" id="navbarResponsive">
					<ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
						<li class="nav-item">
							<a class="nav-link" href="#">Inscription</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Connexion</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#tricks">Tricks</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<!-- Masthead-->
		<header class="masthead">
			<div
				class="container">
				{# <div class="masthead-subheading">Bienvenue sur Snowtricks !</div> #}
				<div class="masthead-heading text-uppercase">Bienvenue sur Snowtricks !</div>
				<a class="btn btn-primary btn-xl text-uppercase" href="#figures">Voir les tricks !</a>
			</div>
		</header>
		<!-- Trick Grid-->
		<section class="page-section bg-light" id="tricks">
			<div class="container">
				<div class="text-center">
					<h2 class="section-heading text-uppercase">Tricks</h2>
					<h3 class="section-subheading text-muted">Cliquez sur une photo pour avoir plus de d√©tails.</h3>
				</div>
				<div class="row">
					{% for trick in tricks %}
						<div class="col-lg-4 col-sm-6 mb-4">
							<div class="trick-item">
								<a class="trick-link" data-bs-toggle="modal" href="#trickModal{{ trick.id }}">
									<div class="trick-hover">
										<div
											class="trick-hover-content">
											{# <i class="fas fa-plus fa-3x"></i> #}
											{% for media in trick.media %}
												{% if loop.first and media.type == 'photo' %}
													<img class="grid-media" src="{{ media.media }}" alt="">
												{% endif %}
											{% endfor %}
										</div>
									</div>
								</a>
								<div class="trick-caption">
									<div class="trick-caption-heading">{{ trick.name }}</div>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</section>
		<!-- Footer-->
		<footer class="footer py-4">
			<div class="container">
				<div class="row align-items-center">
					<div class="col-lg-4 text-lg-start">Copyright &copy; Your Website 2023</div>
					<div class="col-lg-4 my-3 my-lg-0">
						<a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Twitter">
							<i class="fab fa-twitter"></i>
						</a>
						<a class="btn btn-dark btn-social mx-2" href="#!" aria-label="Facebook">
							<i class="fab fa-facebook-f"></i>
						</a>
						<a class="btn btn-dark btn-social mx-2" href="#!" aria-label="LinkedIn">
							<i class="fab fa-linkedin-in"></i>
						</a>
					</div>
					<div class="col-lg-4 text-lg-end">
						<a class="link-dark text-decoration-none me-3" href="#!">Privacy Policy</a>
						<a class="link-dark text-decoration-none" href="#!">Terms of Use</a>
					</div>
				</div>
			</div>
		</footer>

		{% include 'snowtricks/trickModal.twig' %}

	</body>
	
{% endblock %}
